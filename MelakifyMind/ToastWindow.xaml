<Window x:Class="melakify.Do.ToastWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MelakifyMind"
        mc:Ignorable="d"
        Title="Melakify +Toast" x:Name="windowApp" WindowStyle="None" MaxHeight="264" Top="0" Left="0" Loaded="Window_Loaded" Background="{x:Null}" ShowInTaskbar="False" Topmost="True" AllowsTransparency="True" ResizeMode="NoResize">
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="-1" CaptionHeight="0" UseAeroCaptionButtons="False"/>
    </WindowChrome.WindowChrome>
    <Window.Resources>
        <Storyboard x:Key="storyClose">
            <DoubleAnimation To="400" Storyboard.TargetName="translateTransform" Storyboard.TargetProperty="(TranslateTransform.X)" Duration="0:0:0.4">
                <DoubleAnimation.EasingFunction>
                    <CircleEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </Window.Resources>
    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation To="-16" Storyboard.TargetName="translateTransform" Storyboard.TargetProperty="(TranslateTransform.X)" Duration="0:0:0.56">
                        <DoubleAnimation.EasingFunction>
                            <ExponentialEase Exponent="7" EasingMode="EaseOut"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>
    <Grid Width="400" Name="gridRoot" HorizontalAlignment="Right" FlowDirection="RightToLeft">
        <Grid.RenderTransform>
            <TranslateTransform x:Name="translateTransform" X="400" Y="0"/>
        </Grid.RenderTransform>
        <VirtualizingStackPanel Orientation="Vertical">
            <Border CornerRadius="12" Height="256" Margin="0,4" Background="#FFE2E2E2" BorderBrush="#14000000" BorderThickness="1">
                <Grid>
                    <TextBlock Text="درک جادویی" Name="textBlockTitle" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="22" FontFamily="Fonts/#IRANSansX Regular" FontSize="14" Foreground="#FF8B1BAD"/>
                    <Button Name="buttonCloseNow" Style="{StaticResource buttonFlat}" HorizontalAlignment="Right" VerticalAlignment="Top" Height="32" Width="32" Margin="16" Click="buttonCloseNow_Click">
                        <Image SnapsToDevicePixels="False" Stretch="None" OpacityMask="Black">
                            <Image.Source>
                                <DrawingImage>
                                    <DrawingImage.Drawing>
                                        <GeometryDrawing>
                                            <GeometryDrawing.Brush>
                                                <VisualBrush Stretch="None">
                                                    <VisualBrush.Visual>
                                                        <TextBlock FontFamily="Fonts/#Segoe Fluent Icons" Text="&#xE8A7;" FontSize="16" Foreground="#E0000000"/>
                                                    </VisualBrush.Visual>
                                                </VisualBrush>
                                            </GeometryDrawing.Brush>
                                            <GeometryDrawing.Geometry>
                                                <RectangleGeometry Rect="20,20,20,20"/>
                                            </GeometryDrawing.Geometry>
                                        </GeometryDrawing>
                                    </DrawingImage.Drawing>
                                </DrawingImage>
                            </Image.Source>
                        </Image>
                    </Button>
                    <TextBlock Name="textBlockDescription" VerticalAlignment="Top" Margin="32,64,32,0" FontFamily="Fonts/#IRANSansX Regular" Text="" FontSize="18" Height="110"/>
                    <TextBlock FontFamily="Fonts/#IRANSansX Regular" FontSize="14" Name="textBlockDaysDistance" VerticalAlignment="Top" Margin="32,150,32,0"/>
                    <Button HorizontalContentAlignment="Center" Name="buttonDismiss" Content="فهمیدم" FontFamily="Fonts/#IRANSansX Regular" Margin="32,197,204,24" Click="buttonDismiss_Click"/>
                    <Button HorizontalContentAlignment="Center" Name="buttonSnooze" Content="بعداً" FontFamily="Fonts/#IRANSansX Regular" Margin="204,197,32,24"/>
                </Grid>
            </Border>
        </VirtualizingStackPanel>
    </Grid>
</Window>
