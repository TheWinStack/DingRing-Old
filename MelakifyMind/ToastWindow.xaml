<Window x:Class="melakify.Do.ToastWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MelakifyMind"
        mc:Ignorable="d"
        Title="Melakify +Toast" x:Name="windowApp" WindowStyle="None" Top="0" Left="0" Loaded="Window_Loaded" Background="{x:Null}" ShowInTaskbar="False" Topmost="True" AllowsTransparency="True" ResizeMode="NoResize">
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="-1" CaptionHeight="0" UseAeroCaptionButtons="False"/>
    </WindowChrome.WindowChrome>
    <Window.Resources>
        <Storyboard x:Key="storyClose">
            <DoubleAnimation To="400" Storyboard.TargetName="translateTransform" Storyboard.TargetProperty="(TranslateTransform.X)" Duration="0:0:0.4">
                <DoubleAnimation.EasingFunction>
                    <CircleEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </Window.Resources>
    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation To="-16" Storyboard.TargetName="translateTransform" Storyboard.TargetProperty="(TranslateTransform.X)" Duration="0:0:0.56">
                        <DoubleAnimation.EasingFunction>
                            <ExponentialEase Exponent="7" EasingMode="EaseOut"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>
    <Grid Width="400" Name="gridRoot" HorizontalAlignment="Right" FlowDirection="RightToLeft">
        <Grid.RenderTransform>
            <TranslateTransform x:Name="translateTransform" X="400" Y="0"/>
        </Grid.RenderTransform>
        <Border Name="borderRoot" BorderThickness="1" Width="400" BorderBrush="#28000000" Background="White" UseLayoutRounding="True" CornerRadius="12"/>
        <MediaElement Name="mediaPlayer" LoadedBehavior="Play" Source="Rings/Waterdrop_Drop.mp3"/>
        <Button ToolTip="صفحه اصلی" Height="36" HorizontalAlignment="Right" Width="36" Name="buttonShowTheMain" Style="{StaticResource buttonFlat}" Margin="57,18,57,0" VerticalAlignment="Top" Click="buttonShowTheMain_Click">
            <Image SnapsToDevicePixels="False" Grid.Column="1" Name="comboBoxUIImageMain" Margin="8" Stretch="None" OpacityMask="Black">
                <Image.Source>
                    <DrawingImage>
                        <DrawingImage.Drawing>
                            <GeometryDrawing>
                                <GeometryDrawing.Brush>
                                    <VisualBrush Stretch="None">
                                        <VisualBrush.Visual>
                                            <TextBlock FontFamily="Fonts/#Segoe Fluent Icons" Text="&#xE8A7;" FontSize="16">

                                            </TextBlock>
                                        </VisualBrush.Visual>
                                    </VisualBrush>
                                </GeometryDrawing.Brush>
                                <GeometryDrawing.Geometry>
                                    <RectangleGeometry Rect="20,20,20,20"/>
                                </GeometryDrawing.Geometry>
                            </GeometryDrawing>
                        </DrawingImage.Drawing>
                    </DrawingImage>
                </Image.Source>
            </Image>
        </Button>
        <Button ToolTip="فهمیدم و بستن" Height="36" HorizontalAlignment="Right" Width="36" Name="buttonClose" Style="{StaticResource buttonFlat}" Margin="16,18,16,0" VerticalAlignment="Top" Click="buttonClose_Click">
            <Image SnapsToDevicePixels="False" Grid.Column="1" Margin="8" Stretch="None" OpacityMask="Black">
                <Image.Source>
                    <DrawingImage>
                        <DrawingImage.Drawing>
                            <GeometryDrawing>
                                <GeometryDrawing.Brush>
                                    <VisualBrush Stretch="None">
                                        <VisualBrush.Visual>
                                            <TextBlock FontFamily="Fonts/#Segoe Fluent Icons" Text="&#xE711;" FontSize="16">

                                            </TextBlock>
                                        </VisualBrush.Visual>
                                    </VisualBrush>
                                </GeometryDrawing.Brush>
                                <GeometryDrawing.Geometry>
                                    <RectangleGeometry Rect="20,20,20,20"/>
                                </GeometryDrawing.Geometry>
                            </GeometryDrawing>
                        </DrawingImage.Drawing>
                    </DrawingImage>
                </Image.Source>
            </Image>
        </Button>
        <TextBlock Name="textBlockTitle" FontSize="18" Margin="32,24" FontFamily="Fonts/#IRANSansX Regular" HorizontalAlignment="Left" Text="درک جادویی" VerticalAlignment="Top" Foreground="#FF9421AF"/>
        <TextBlock TextWrapping="Wrap" Name="textBlockAI" Margin="32,96,32,32" FontFamily="Fonts/#IRANSansX Regular" FontSize="18" VerticalAlignment="Top">
سلام! من درک جادویی هستم. من در برنامه +Do می توانم مدیریت موعد های شما را برعهده بگیرم.
        </TextBlock>
    </Grid>
</Window>
