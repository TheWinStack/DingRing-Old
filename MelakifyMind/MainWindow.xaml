                                <StackPanel Orientation="Horizontal">
                                    <Image SnapsToDevicePixels="False" Grid.Column="1" Margin="0,4" Stretch="None" OpacityMask="Black">
                                        <Image.Source>
                                            <DrawingImage>
                                                <DrawingImage.Drawing>
                                                    <GeometryDrawing>
                                                        <GeometryDrawing.Brush>
                                                            <VisualBrush Stretch="None">
                                                                <VisualBrush.Visual>
                                                                    <TextBlock FontFamily="Fonts/#Segoe Fluent Icons" Text="&#xE8C8;" FontSize="16">

                                                                    </TextBlock>
                                                                </VisualBrush.Visual>
                                                            </VisualBrush>
                                                        </GeometryDrawing.Brush>
                                                        <GeometryDrawing.Geometry>
                                                            <RectangleGeometry Rect="16,16,16,16"/>
                                                        </GeometryDrawing.Geometry>
                                                    </GeometryDrawing>
                                                </DrawingImage.Drawing>
                                            </DrawingImage>
                                        </Image.Source>
                                    </Image>
                                    <TextBlock x:Name="textBlockTextCopy" FontSize="14" FontFamily="Fonts/#IRANSansX Light" Text="رونوشت" Margin="10,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                </StackPanel>
                            </MenuItem.Header>
                        </MenuItem>
                        <MenuItem FlowDirection="RightToLeft" Command="ApplicationCommands.Cut">
                            <MenuItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <Image SnapsToDevicePixels="False" Grid.Column="1" Margin="0,4" Stretch="None" OpacityMask="Black">
                                        <Image.Source>
                                            <DrawingImage>
                                                <DrawingImage.Drawing>
                                                    <GeometryDrawing>
                                                        <GeometryDrawing.Brush>
                                                            <VisualBrush Stretch="None">
                                                                <VisualBrush.Visual>
                                                                    <TextBlock FontFamily="Fonts/#Segoe Fluent Icons" Text="&#xE8C6;" FontSize="16">

                                                                    </TextBlock>
                                                                </VisualBrush.Visual>
                                                            </VisualBrush>
                                                        </GeometryDrawing.Brush>
                                                        <GeometryDrawing.Geometry>
                                                            <RectangleGeometry Rect="16,16,16,16"/>
                                                        </GeometryDrawing.Geometry>
                                                    </GeometryDrawing>
                                                </DrawingImage.Drawing>
                                            </DrawingImage>
                                        </Image.Source>
                                    </Image>
                                    <TextBlock x:Name="textBlockTextCut" FontFamily="Fonts/#IRANSansX Light" Text="برش" Margin="10,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                </StackPanel>
                            </MenuItem.Header>
                        </MenuItem>
                        <MenuItem FlowDirection="RightToLeft" Command="ApplicationCommands.Paste">
                            <MenuItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <Image SnapsToDevicePixels="False" Grid.Column="1" Margin="0,4" Stretch="None" OpacityMask="Black">
                                        <Image.Source>
                                            <DrawingImage>
                                                <DrawingImage.Drawing>
                                                    <GeometryDrawing>
                                                        <GeometryDrawing.Brush>
                                                            <VisualBrush Stretch="None">
                                                                <VisualBrush.Visual>
                                                                    <TextBlock FontFamily="Fonts/#Segoe Fluent Icons" Text="&#xE77F;" FontSize="16">

                                                                    </TextBlock>
                                                                </VisualBrush.Visual>
                                                            </VisualBrush>
                                                        </GeometryDrawing.Brush>
                                                        <GeometryDrawing.Geometry>
                                                            <RectangleGeometry Rect="16,16,16,16"/>
                                                        </GeometryDrawing.Geometry>
                                                    </GeometryDrawing>
                                                </DrawingImage.Drawing>
                                            </DrawingImage>
                                        </Image.Source>
                                    </Image>
                                    <TextBlock x:Name="textBlockTextPaste" FontSize="14" Text="جایگذاری" FontFamily="Fonts/#IRANSansX Light" Margin="10,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                </StackPanel>
                            </MenuItem.Header>
                        </MenuItem>
