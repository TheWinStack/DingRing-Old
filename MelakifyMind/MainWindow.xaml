<Window x:Class="melakify.Do.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MelakifyMind"
        mc:Ignorable="d"
        Title="melakify +Do" Name="windowRoot" FontFamily="Fonts/#IRANSansX Regular" Height="700" Width="1100" MinHeight="700" MinWidth="1100" Loaded="windowRoot_Loaded" Background="#FFDDCBB6" WindowStartupLocation="CenterScreen" Icon="/Images/Melak +Mind.ico" Closing="windowRoot_Closing">
    <WindowChrome.WindowChrome>
        <WindowChrome x:Name="windowChrome" GlassFrameThickness="-1" CaptionHeight="0"/>
    </WindowChrome.WindowChrome>
    <Window.Resources>
        <Style TargetType="ComboBoxItem">
            <Setter Property="BorderBrush" Value="Orange"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border Margin="0,2.5" Name="comboBoxItemUI" Height="32" CornerRadius="6" Background="Transparent">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Disabled">
                                        <Storyboard>
                                            <ColorAnimation To="#06000000" Duration="0:0:0.05" Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"/>
                                            <DoubleAnimation To="0.4" Storyboard.TargetName="comboBoxItemContent" Storyboard.TargetProperty="Opacity" Duration="0:0:0.05"/>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="MouseOver">
                                        <Storyboard>
                                            <ColorAnimation To="#08000000" Duration="0:0:0.05" Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"/>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Normal">
                                        <Storyboard>
                                            <ColorAnimation To="Transparent" Duration="0:0:0.05" Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"/>
                                            <DoubleAnimation To="1" Storyboard.TargetName="comboBoxItemContent" Storyboard.TargetProperty="Opacity" Duration="0:0:0.05"/>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                                <VisualStateGroup x:Name="SelectionStates">
                                    <VisualState x:Name="Selected">
                                        <Storyboard>
                                            <DoubleAnimation To="1" Storyboard.TargetName="comboBoxItemFocus" Storyboard.TargetProperty="Opacity" Duration="0:0:0.05">
                                                <DoubleAnimation.EasingFunction>
                                                    <ExponentialEase Exponent="7" EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation To="16" Storyboard.TargetName="comboBoxItemFocus" Storyboard.TargetProperty="Height" Duration="0:0:0.1">
                                                <DoubleAnimation.EasingFunction>
                                                    <ExponentialEase Exponent="7" EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Unselected">
                                        <Storyboard>
                                            <DoubleAnimation To="0" Storyboard.TargetName="comboBoxItemFocus" Storyboard.TargetProperty="Opacity" Duration="0:0:0.05">
                                                <DoubleAnimation.EasingFunction>
                                                    <ExponentialEase Exponent="7" EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation To="4" Storyboard.TargetName="comboBoxItemFocus" Storyboard.TargetProperty="Height" Duration="0:0:0.1">
                                                <DoubleAnimation.EasingFunction>
                                                    <ExponentialEase Exponent="7" EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <Border.Triggers>
                                <EventTrigger RoutedEvent="MouseLeftButtonDown">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation To="#04000000" Duration="0:0:0.05" Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"/>
                                            <DoubleAnimation To="0.5" Storyboard.TargetName="comboBoxItemContent" Storyboard.TargetProperty="Opacity" Duration="0:0:0.05"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Border.Triggers>
                            <VirtualizingStackPanel Orientation="Horizontal">
                                <Border Opacity="0" HorizontalAlignment="Left" Height="4" Margin="0,0,5,0" VerticalAlignment="Center" Width="4" Name="comboBoxItemFocus" CornerRadius="2" Background="{TemplateBinding BorderBrush}"/>
                                <ContentPresenter Name="comboBoxItemContent" Content="{TemplateBinding ComboBoxItem.Content}" Margin="5,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            </VirtualizingStackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="MinHeight" Value="25"/>
            <Setter Property="MinWidth" Value="30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Popup AllowsTransparency="True" Name="comboBoxUIPopup" PlacementTarget="{Binding comboBoxUI}" IsOpen="{TemplateBinding IsDropDownOpen}" PopupAnimation="Fade">
                                <Border Margin="32" BorderThickness="1" CornerRadius="8" Width="{TemplateBinding ActualWidth}" Background="#F2FDFDFD" VerticalAlignment="Top" BorderBrush="#28B4B4B4">
                                    <Border.Effect>
                                        <DropShadowEffect Direction="270" BlurRadius="12" ShadowDepth="4" Opacity="0.16"/>
                                    </Border.Effect>
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <StackPanel Name="comboBoxItemUIContent" Margin="5,2.5" IsItemsHost="True"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                            <ToggleButton ClickMode="Press" IsChecked="{Binding Path=IsDropDownOpen,Mode=TwoWay,RelativeSource={RelativeSource TemplatedParent}}">
                                <ToggleButton.Template>
                                    <ControlTemplate>
                                        <ControlTemplate.Triggers>
                                            <EventTrigger RoutedEvent="ComboBox.MouseEnter">
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <ColorAnimation Storyboard.TargetName="comboBoxUI" To="#FFF8F8F8" Duration="0:0:0.02" Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                            <EventTrigger RoutedEvent="ComboBox.MouseLeave">
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <ColorAnimation Storyboard.TargetName="comboBoxUI" To="#FFFfffff" Duration="0:0:0.02" Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"/>
                                                        <DoubleAnimation To="0.16" Storyboard.TargetName="comboBoxUIEffect" Storyboard.TargetProperty="Opacity" Duration="0:0:0.02"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                            <EventTrigger RoutedEvent="Button.PreviewMouseLeftButtonDown">
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <ColorAnimation Storyboard.TargetName="comboBoxUI" To="#FFF8F8F8" Duration="0:0:0.02" Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"/>
                                                        <DoubleAnimation To="0" Storyboard.TargetName="comboBoxUIEffect" Storyboard.TargetProperty="Opacity" Duration="0:0:0.02"/>
                                                        <ThicknessAnimationUsingKeyFrames Storyboard.TargetName="comboBoxUIImageMain" Storyboard.TargetProperty="Margin" Duration="0:0:0.8">
                                                            <EasingThicknessKeyFrame KeyTime="0:0:0.2" Value="8,4,8,12">
                                                                <EasingThicknessKeyFrame.EasingFunction>
                                                                    <ExponentialEase Exponent="7" EasingMode="EaseOut"/>
                                                                </EasingThicknessKeyFrame.EasingFunction>
                                                            </EasingThicknessKeyFrame>
                                                            <EasingThicknessKeyFrame KeyTime="0:0:0.35" Value="8,14,8,2">
                                                                <EasingThicknessKeyFrame.EasingFunction>
                                                                    <ExponentialEase Exponent="7" EasingMode="EaseOut"/>
                                                                </EasingThicknessKeyFrame.EasingFunction>
                                                            </EasingThicknessKeyFrame>

                                                            <EasingThicknessKeyFrame KeyTime="0:0:0.8" Value="8">
                                                                <EasingThicknessKeyFrame.EasingFunction>
                                                                    <ExponentialEase Exponent="7" EasingMode="EaseOut"/>
                                                                </EasingThicknessKeyFrame.EasingFunction>
                                                            </EasingThicknessKeyFrame>
                                                        </ThicknessAnimationUsingKeyFrames>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                            <EventTrigger RoutedEvent="Button.PreviewMouseLeftButtonUp">
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <ColorAnimation Storyboard.TargetName="comboBoxUI" To="#FFF8F8F8" Duration="0:0:0.02" Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"/>
                                                        <DoubleAnimation To="0.16" Storyboard.TargetName="comboBoxUIEffect" Storyboard.TargetProperty="Opacity" Duration="0:0:0.02"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                        </ControlTemplate.Triggers>
                                        <Border Name="comboBoxUI" CornerRadius="6" BorderThickness="1" BorderBrush="#28B4B4B4" Background="#FFFFFFFF">
                                            <Border.Effect>
                                                <DropShadowEffect x:Name="comboBoxUIEffect" Opacity="0.16" ShadowDepth="1" Direction="270" BlurRadius="2"/>
                                            </Border.Effect>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="5*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <Image SnapsToDevicePixels="False" Grid.Column="1" Name="comboBoxUIImageMain" Margin="8" Stretch="None" OpacityMask="Black">
                                                    <Image.Source>
                                                        <DrawingImage>
                                                            <DrawingImage.Drawing>
                                                                <GeometryDrawing>
                                                                    <GeometryDrawing.Brush>
                                                                        <VisualBrush Stretch="None">
                                                                            <VisualBrush.Visual>
                                                                                <TextBlock FontFamily="Fonts/#Segoe Fluent Icons" Text="&#xE70D;" FontSize="14">

                                                                                </TextBlock>
                                                                            </VisualBrush.Visual>
                                                                        </VisualBrush>
                                                                    </GeometryDrawing.Brush>
                                                                    <GeometryDrawing.Geometry>
                                                                        <RectangleGeometry Rect="20,20,20,20"/>
                                                                    </GeometryDrawing.Geometry>
                                                                </GeometryDrawing>
                                                            </DrawingImage.Drawing>
                                                        </DrawingImage>
                                                    </Image.Source>
                                                </Image>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter IsHitTestVisible="False" Name="comboBoxContent" HorizontalAlignment="Left" Margin="10,4,0,0" Content="{TemplateBinding SelectionBoxItem}" ContentTemplate="{TemplateBinding ComboBox.SelectionBoxItemTemplate}" ContentTemplateSelector="{TemplateBinding ComboBox.ItemTemplateSelector}" VerticalAlignment="Center"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Storyboard x:Key="storySettingsOptionsClose">
            <DoubleAnimation To="-64" Storyboard.TargetName="translateSettingsOptions" Storyboard.TargetProperty="(TranslateTransform.X)" Duration="0:0:0.333">
                <DoubleAnimation.EasingFunction>
                    <CircleEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation To="0" Storyboard.TargetName="gridSettingsOptions" Storyboard.TargetProperty="Opacity" Duration="0:0:0.16"/>
        </Storyboard>
        <Storyboard x:Key="storySettingsOptionsOpen">
            <DoubleAnimation To="0" Storyboard.TargetName="translateSettingsOptions" Storyboard.TargetProperty="(TranslateTransform.X)" Duration="0:0:0.333">
                <DoubleAnimation.EasingFunction>
                    <ExponentialEase Exponent="7" EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation To="1" Storyboard.TargetName="gridSettingsOptions" Storyboard.TargetProperty="Opacity" Duration="0:0:0.16"/>
        </Storyboard>
        <Storyboard x:Key="storySettingsPerformanceOpen">
            <DoubleAnimation To="0" Storyboard.TargetName="translateSettingsPerformance" Storyboard.TargetProperty="(TranslateTransform.X)" Duration="0:0:0.333">
                <DoubleAnimation.EasingFunction>
                    <ExponentialEase Exponent="7" EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation To="1" Storyboard.TargetName="gridSettingsPerformance" Storyboard.TargetProperty="Opacity" Duration="0:0:0.16"/>
        </Storyboard>
        <Storyboard x:Key="storySettingsPerformanceClose">
            <DoubleAnimation To="64" Storyboard.TargetName="translateSettingsPerformance" Storyboard.TargetProperty="(TranslateTransform.X)" Duration="0:0:0.333">
                <DoubleAnimation.EasingFunction>
                    <ExponentialEase Exponent="7" EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation To="0" Storyboard.TargetName="gridSettingsPerformance" Storyboard.TargetProperty="Opacity" Duration="0:0:0.16"/>
        </Storyboard>
        <Storyboard x:Key="storySettingsUserOpen">
            <DoubleAnimation To="0" Storyboard.TargetName="translateSettingsUser" Storyboard.TargetProperty="(TranslateTransform.X)" Duration="0:0:0.333">
                <DoubleAnimation.EasingFunction>
                    <ExponentialEase Exponent="7" EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation To="1" Storyboard.TargetName="gridSettingsUser" Storyboard.TargetProperty="Opacity" Duration="0:0:0.16"/>
        </Storyboard>
        <Storyboard x:Key="storySettingsUserClose">
            <DoubleAnimation To="64" Storyboard.TargetName="translateSettingsUser" Storyboard.TargetProperty="(TranslateTransform.X)" Duration="0:0:0.333">
                <DoubleAnimation.EasingFunction>
                    <ExponentialEase Exponent="7" EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation To="0" Storyboard.TargetName="gridSettingsUser" Storyboard.TargetProperty="Opacity" Duration="0:0:0.16"/>
        </Storyboard>
        <Storyboard x:Key="storySettingsPersonalizeOpen">
            <DoubleAnimation To="0" Storyboard.TargetName="translateSettingsPersonalize" Storyboard.TargetProperty="(TranslateTransform.X)" Duration="0:0:0.333">
                <DoubleAnimation.EasingFunction>
                    <ExponentialEase Exponent="7" EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation To="1" Storyboard.TargetName="gridSettingsPersonalize" Storyboard.TargetProperty="Opacity" Duration="0:0:0.16"/>
        </Storyboard>
        <Storyboard x:Key="storySettingsPersonalizeClose">
            <DoubleAnimation To="64" Storyboard.TargetName="translateSettingsPersonalize" Storyboard.TargetProperty="(TranslateTransform.X)" Duration="0:0:0.333">
                <DoubleAnimation.EasingFunction>
                    <ExponentialEase Exponent="7" EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation To="0" Storyboard.TargetName="gridSettingsPersonalize" Storyboard.TargetProperty="Opacity" Duration="0:0:0.16"/>
        </Storyboard>
        <Storyboard x:Key="storySettingsDatabaseOpen">
            <DoubleAnimation To="0" Storyboard.TargetName="translateSettingsDatabase" Storyboard.TargetProperty="(TranslateTransform.X)" Duration="0:0:0.333">
                <DoubleAnimation.EasingFunction>
                    <ExponentialEase Exponent="7" EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation To="1" Storyboard.TargetName="gridSettingsDatabase" Storyboard.TargetProperty="Opacity" Duration="0:0:0.16"/>
        </Storyboard>
        <Storyboard x:Key="storySettingsDatabaseClose">
            <DoubleAnimation To="64" Storyboard.TargetName="translateSettingsDatabase" Storyboard.TargetProperty="(TranslateTransform.X)" Duration="0:0:0.333">
                <DoubleAnimation.EasingFunction>
                    <ExponentialEase Exponent="7" EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation To="0" Storyboard.TargetName="gridSettingsDatabase" Storyboard.TargetProperty="Opacity" Duration="0:0:0.16"/>
        </Storyboard>
        <Style TargetType="ToolTip">
            <Setter Property="Foreground" Value="#FF292929"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Fonts/#IRANSansX Regular"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToolTip}">
                        <Border Padding="12,8" Margin="30" Name="toolTipUIMain" BorderBrush="#28B4B4B4" BorderThickness="1" Background="#F2FBFBFB" CornerRadius="8">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="16" Direction="270" Opacity="0.12" ShadowDepth="8"/>
                            </Border.Effect>
                            <ContentControl HorizontalAlignment="Center" VerticalAlignment="Center" Name="toolTipContent" Content="{TemplateBinding Content}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Storyboard x:Key="storyMessageDialogOpen">
            <DoubleAnimation From="1.05" To="1" Storyboard.TargetName="scaleTransformMessage" Storyboard.TargetProperty="(ScaleTransform.ScaleX)" Duration="0:0:0.333">
                <DoubleAnimation.EasingFunction>
                    <ExponentialEase Exponent="4" EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation From="1.05" To="1" Storyboard.TargetName="scaleTransformMessage" Storyboard.TargetProperty="(ScaleTransform.ScaleY)" Duration="0:0:0.333">
                <DoubleAnimation.EasingFunction>
                    <ExponentialEase Exponent="4" EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation From="0" To="1" Storyboard.TargetName="borderMessage" Storyboard.TargetProperty="Opacity" Duration="0:0:0.1"/>
            <DoubleAnimation From="0" To="1" Storyboard.TargetName="borderMessageBack" Storyboard.TargetProperty="Opacity" Duration="0:0:0.1"/>
        </Storyboard>
        <Storyboard Duration="0:0:0.16" x:Key="storyMessageDialogClose">
            <DoubleAnimation From="1" To="1.05" Storyboard.TargetName="scaleTransformMessage" Storyboard.TargetProperty="(ScaleTransform.ScaleX)" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <ExponentialEase Exponent="4" EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation From="1" To="1.05" Storyboard.TargetName="scaleTransformMessage" Storyboard.TargetProperty="(ScaleTransform.ScaleY)" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <ExponentialEase Exponent="4" EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation From="1" To="0" Storyboard.TargetName="borderMessage" Storyboard.TargetProperty="Opacity" Duration="0:0:0.1"/>
            <DoubleAnimation From="1" To="0" Storyboard.TargetName="borderMessageBack" Storyboard.TargetProperty="Opacity" Duration="0:0:0.1"/>
        </Storyboard>
        <Storyboard x:Key="storyOnStartupEnable">
            <ColorAnimation To="#FF47C824" Storyboard.TargetName="borderOnStartupActivator" Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" Duration="0:0:0.1"/>
        </Storyboard>
        <Storyboard x:Key="storyOnStartupDisable">
            <ColorAnimation To="#FFBDBDBD" Storyboard.TargetName="borderOnStartupActivator" Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" Duration="0:0:0.1"/>
        </Storyboard>
        <Storyboard x:Key="storyReminderFirstEnable">
            <ColorAnimation To="#FF47C824" Storyboard.TargetName="borderReminderFirstActivator" Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" Duration="0:0:0.1"/>
        </Storyboard>
        <Storyboard x:Key="storyReminderFirstDisable">
            <ColorAnimation To="#FFBDBDBD" Storyboard.TargetName="borderReminderFirstActivator" Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" Duration="0:0:0.1"/>
        </Storyboard>
        <Storyboard x:Key="storyBackupEnable">
            <ColorAnimation To="#FF47C824" Storyboard.TargetName="borderBackupActivator" Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" Duration="0:0:0.1"/>
        </Storyboard>
        <Storyboard x:Key="storyBackupDisable">
            <ColorAnimation To="#FFBDBDBD" Storyboard.TargetName="borderBackupActivator" Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" Duration="0:0:0.1"/>
        </Storyboard>
        <Storyboard x:Key="storyAllowTransEnable">
            <ColorAnimation To="#FF47C824" Storyboard.TargetName="borderAllowTransActivator" Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" Duration="0:0:0.1"/>
        </Storyboard>
        <Storyboard x:Key="storyAllowTransDisable">
            <ColorAnimation To="#FFBDBDBD" Storyboard.TargetName="borderAllowTransActivator" Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" Duration="0:0:0.1"/>
        </Storyboard>
        <Storyboard x:Key="storyAddOpen">
            <DoubleAnimation To="400" Storyboard.TargetName="borderAddReminder" Storyboard.TargetProperty="Height" Duration="0:0:0.333">
                <DoubleAnimation.EasingFunction>
                    <ExponentialEase EasingMode="EaseOut" Exponent="7"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation To="1" Storyboard.TargetName="borderAddReminder" Storyboard.TargetProperty="Opacity" Duration="0:0:0.2"/>
        </Storyboard>
        <Storyboard x:Key="storyAddClose">
            <DoubleAnimation To="10" Storyboard.TargetName="borderAddReminder" Storyboard.TargetProperty="Height" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <CircleEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation To="0" Storyboard.TargetName="borderAddReminder" Storyboard.TargetProperty="Opacity" Duration="0:0:0.12"/>
        </Storyboard>
        <Storyboard x:Key="storyMessageScreen"/>
        <Storyboard x:Key="storyMessageScreenClose"/>
        <Style x:Key="TextBoxFlat" TargetType="TextBox">
            <Setter Property="Background" Value="{x:Null}"/>
            <Setter Property="KeyboardNavigation.TabNavigation" Value="None"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="BorderBrush" Value="{x:Null}"/>
            <Setter Property="ContextMenu">
                <Setter.Value>
                    <ContextMenu MinWidth="224" FontSize="14">
                        <MenuItem FlowDirection="RightToLeft" Command="ApplicationCommands.Copy">
