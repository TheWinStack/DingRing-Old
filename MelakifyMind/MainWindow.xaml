                <ThicknessAnimation.EasingFunction>
                    <ExponentialEase Exponent="4" EasingMode="EaseIn"/>
                </ThicknessAnimation.EasingFunction>
            </ThicknessAnimation>
        </Storyboard>
        <Storyboard x:Key="storyMessageClose">
            <ThicknessAnimationUsingKeyFrames Storyboard.TargetName="borderMessageAI" Storyboard.TargetProperty="Margin" Duration="0:0:5">
                <EasingThicknessKeyFrame KeyTime="0:0:4.6" Value="130,0,0,352"/>
                <EasingThicknessKeyFrame KeyTime="0:0:5" Value="130,0,0,292">
                    <EasingThicknessKeyFrame.EasingFunction>
                        <ExponentialEase Exponent="4" EasingMode="EaseIn"/>
                    </EasingThicknessKeyFrame.EasingFunction>
                </EasingThicknessKeyFrame>
            </ThicknessAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="storyAIOpen"/>
        <Storyboard x:Key="storyAIClose"/>
        <Storyboard x:Key="storyPreviewOpen"/>
        <Storyboard x:Key="storyPreviewClose"/>
        <Storyboard x:Key="storyExpandAI"/>
        <Storyboard x:Key="storyExpandAIClose"/>
