                    <ExponentialEase Exponent="6" EasingMode="EaseOut"/>
                </ThicknessAnimation.EasingFunction>
            </ThicknessAnimation>
            <DoubleAnimation Storyboard.TargetName="gridSettings" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.1">

