                <ThicknessAnimation.EasingFunction>
                    <ExponentialEase Exponent="4" EasingMode="EaseOut"/>
                </ThicknessAnimation.EasingFunction>
            </ThicknessAnimation>
        </Storyboard>
        <Storyboard x:Key="storyMessageForceClose">
